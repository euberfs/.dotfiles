bindsym Shift+Print exec scrot -s ~/Pictures/Screenshots/Screenshot_%Y-%m-%d_%H-%M-%S.png
bindsym $mod+Print exec scrot -u ~/Pictures/Screenshots/Screenshot_%Y-%m-%d_%H-%M-%S.png

